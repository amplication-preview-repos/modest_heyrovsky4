datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BackgroundSettings {
  brightness     Float?
  contrast       Float?
  createdAt      DateTime @default(now())
  enableLiveFeed Boolean?
  id             String   @id @default(cuid())
  updatedAt      DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  password  String?
  updatedAt DateTime @updatedAt
  username  String?
}

model Gesture {
  command     String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model LiveFeed {
  active     Boolean?
  createdAt  DateTime                @default(now())
  id         String                  @id @default(cuid())
  resolution EnumLiveFeedResolution?
  updatedAt  DateTime                @updatedAt
  url        String?
}

model CameraSettings {
  autoFocus     Boolean?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  stabilization Boolean?
  updatedAt     DateTime @updatedAt
}

enum EnumLiveFeedResolution {
  Option1
}
